{
  "scripts": {
    "test": "uvu -r tsm src/tests",
    "cov": "c8 -c=src/.c8rc npm run test",
    "cov:report": "c8 report --reporter=text-lcov > coverage.lcov",
    "dev": "routify -c dev:vite ",
    "build": "svelte-check && routify -b && vite build",
    "dev:vite": "vite --host",
    "serve": "vite preview",
    "validate": "svelte-check",
    "generate": "graphql-codegen --config codegen.yml -r .env"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.5.0",
    "@graphql-codegen/typescript": "^2.4.3",
    "@graphql-codegen/typescript-operations": "^2.2.4",
    "@graphql-codegen/typescript-urql": "^3.5.1",
    "@graphql-codegen/urql-introspection": "^2.1.1",
    "@graphql-codegen/urql-svelte-operations-store": "^1.1.10",
    "@roxi/routify": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.7",
    "@tsconfig/svelte": "^1.0.10",
    "c8": "^7.11.0",
    "html-minifier": "^4.0.0",
    "svelte": "^3.37.0",
    "svelte-check": "^1.6.0",
    "svelte-preprocess": "^4.7.2",
    "tsm": "^2.2.1",
    "uvu": "^0.5.2",
    "vite": "^2.2.3"
  },
  "dependencies": {
    "@types/jsdom": "^16.2.14",
    "@urql/svelte": "^1.3.3",
    "graphql": "^16.3.0"
  }
}
